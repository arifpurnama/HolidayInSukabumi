<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailHoliday">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dt_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@color/colorAccent" />

            <TextView
                android:id="@+id/dt_lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dimens_horizontal"
                android:layout_marginBottom="@dimen/dimens_horizontal"
                android:background="#4D000000"
                android:drawableLeft="@drawable/icon_location"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Sukabumi"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/bodas" />

        </FrameLayout>

        <TextView
            android:id="@+id/dt_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_horizontal"
            android:layout_marginTop="@dimen/dimens_vertical"
            android:layout_marginRight="@dimen/dimens_horizontal"
            android:layout_marginBottom="@dimen/dimens_vertical"
            android:text="@string/nama_tempat"
            android:textColor="@color/hideung"
            android:textSize="24sp"
            android:textAllCaps="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_horizontal"
            android:layout_marginRight="@dimen/dimens_horizontal"
            android:layout_marginBottom="@dimen/dimens_vertical"
            android:text="@string/deskripsi" />

        <TextView
            android:id="@+id/dt_deksripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_horizontal"
            android:layout_marginRight="@dimen/dimens_horizontal"
            android:layout_marginBottom="@dimen/dimens_vertical"
            android:lineSpacingMultiplier="1"
            android:text="text"
            android:textColor="@color/hideung" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_horizontal"
            android:layout_marginRight="@dimen/dimens_horizontal"
            android:layout_marginBottom="@dimen/dimens_vertical"
            android:text="@string/jam_buka" />

        <TextView
            android:id="@+id/dt_jambuka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_horizontal"
            android:layout_marginRight="@dimen/dimens_horizontal"
            android:layout_marginBottom="@dimen/dimens_vertical"
            android:lineSpacingMultiplier="1"
            android:text="00:00"
            android:textColor="@color/hideung" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_horizontal"
            android:layout_marginRight="@dimen/dimens_horizontal"
            android:layout_marginBottom="@dimen/dimens_vertical"
            android:text="@string/harga_tiket" />

        <TextView
            android:id="@+id/dt_hargatiket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_horizontal"
            android:layout_marginRight="@dimen/dimens_horizontal"
            android:layout_marginBottom="@dimen/dimens_vertical"
            android:lineSpacingMultiplier="1"
            android:text="Rp"
            android:textColor="@color/hideung" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_horizontal"
            android:layout_marginRight="@dimen/dimens_horizontal"
            android:layout_marginBottom="@dimen/dimens_vertical"
            android:text="@string/fasilitas" />

        <TextView
            android:id="@+id/dt_fasilitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_horizontal"
            android:layout_marginRight="@dimen/dimens_horizontal"
            android:layout_marginBottom="@dimen/dimens_vertical"
            android:lineSpacingMultiplier="1"
            android:text="parkir"
            android:textColor="@color/hideung" />

    </LinearLayout>


</ScrollView>